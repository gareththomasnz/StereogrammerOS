<Window x:Class="Stereogrammer.AboutBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stereogrammer" Height="440" Width="610" WindowStartupLocation="CenterOwner" WindowStyle="ThreeDBorderWindow" ShowInTaskbar="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" MaxWidth="200" MinWidth="200" />
            <ColumnDefinition Width="381*" />
        </Grid.ColumnDefinitions>
        <TextBox Grid.ColumnSpan="1" Name="about" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Grid.Column="1" />
        <StackPanel Name="stackPanel1">
            <Image Height="148" Name="image1" Source="/Stereogrammer;component/Images/3D2.png" Stretch="Fill" Width="185" Margin="8" />
            <Label Content="Stereogrammer" FontSize="16" Height="38" HorizontalContentAlignment="Center" Name="title" Width="185" />
            <Label Content="Version 1.0" FontSize="16" Height="38" HorizontalContentAlignment="Center" Name="version" Width="185" />
            <Button Content="OK" Height="33" IsDefault="True" Name="buttonOK" Width="75" Click="buttonOK_Click_1" />
        </StackPanel>
    </Grid>
</Window>
