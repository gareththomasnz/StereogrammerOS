        <Slider Height="296" HorizontalAlignment="Left" Margin="631,68,0,0" Maximum="1" Name="whiteout" Orientation="Vertical" VerticalAlignment="Top" Width="26" Value="1" ValueChanged="slider_ValueChanged" />
